Algoritmo "Jogo"

Var
TA, TB, dif: real

Inicio
EscrevaL ("------------------------------")
EscrevaL ("     Partida de futebol       ")
EscrevaL ("------------------------------")
Escreva ("Quantos pontos o Time A fez? ")
Leia (TA)
Escreva ("Quantos pontos o Time B fez? ")
Leia (TB)
dif <- (TA - TB)
EscrevaL ("----------- STATUS -----------")
EscrevaL ("Diferença: ",dif)
Se (dif >= 5) entao
   EscrevaL ("Goleada")
   EscrevaL ("------------------------------")
Senao
   Se (dif >= 1) e (dif <= 4) entao
      EscrevaL ("Partida normal")
      EscrevaL ("------------------------------")
   Senao
      Se (dif = 0) entao
         EscrevaL ("Empate")
         EscrevaL ("------------------------------")
      FimSe
   FimSe
FimSe

Fimalgoritmo
